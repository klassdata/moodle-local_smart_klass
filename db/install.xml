<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/smart_klass/db" VERSION="20141018" COMMENT="XMLDB file for Moodle local/smart_klass"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_smart_klass" COMMENT="local_smart_klass table retrofitted from MySQL">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="100" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="data" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="active" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="deleted" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="local_smart_klass_log" COMMENT="local_smart_klass_log table retrofitted from MySQL">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="init" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="finish" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="result" TYPE="int" LENGTH="2" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="error" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="collectors" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="logfile" TYPE="char" LENGTH="256" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="id" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="init" UNIQUE="false" FIELDS="init"/>
        <INDEX NAME="finish" UNIQUE="false" FIELDS="finish"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="local_smart_klass_dash_oauth" COMMENT="Dashboard oauth moodle oauth register">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="access_token" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="oAuth 2.0 access token"/>
        <FIELD NAME="refresh_token" TYPE="char" LENGTH="100" NOTNULL="false" SEQUENCE="false" COMMENT="oAuth 2.0 Refresh Token"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="Moodle user id"/>
        <FIELD NAME="email" TYPE="char" LENGTH="150" NOTNULL="false" SEQUENCE="false" COMMENT="User email associate to token (moodle user email)"/>
        <FIELD NAME="dashboard_role" TYPE="int" LENGTH="1" NOTNULL="false" SEQUENCE="false" COMMENT="Dashboard role for token of userid"/>
        <FIELD NAME="modified" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="last used access_token timespam"/>
        <FIELD NAME="created" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false" COMMENT="last used access_token timespam"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid" UNIQUE="false" FIELDS="userid"/>
        <INDEX NAME="email" UNIQUE="false" FIELDS="email"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>